<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <!-- Servlet mapping -->

    <servlet>
        <servlet-name>SignUp</servlet-name>
        <servlet-class>com.webapp.conferences.controllers.servlets.SignUp</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>SignUp</servlet-name>
        <url-pattern>/signup</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Login</servlet-name>
        <servlet-class>com.webapp.conferences.controllers.servlets.Login</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>Events</servlet-name>
        <servlet-class>com.webapp.conferences.controllers.servlets.Events</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Events</servlet-name>
        <url-pattern>/events</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Events</servlet-name>
        <url-pattern>/events/developing</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Events</servlet-name>
        <url-pattern>/events/canceled</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Events</servlet-name>
        <url-pattern>/events/joined</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Events</servlet-name>
        <url-pattern>/events/passed</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>CreateEvent</servlet-name>
        <servlet-class>com.webapp.conferences.controllers.servlets.CreateEvent</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CreateEvent</servlet-name>
        <url-pattern>/events/create</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>EventAction</servlet-name>
        <servlet-class>com.webapp.conferences.controllers.servlets.EventsAction</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>EventAction</servlet-name>
        <url-pattern>/events/change</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>EventAction</servlet-name>
        <url-pattern>/events/action</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>Logout</servlet-name>
        <servlet-class>com.webapp.conferences.controllers.servlets.Logout</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Logout</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>AutoComplete</servlet-name>
        <servlet-class>com.webapp.conferences.controllers.servlets.Autocomplete</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AutoComplete</servlet-name>
        <url-pattern>/autocomplete</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>ContentFilter</servlet-name>
        <servlet-class>com.webapp.conferences.controllers.servlets.ContentFilter</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ContentFilter</servlet-name>
        <url-pattern>/events/filter</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ContentFilter</servlet-name>
        <url-pattern>/events/developing/filter</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ContentFilter</servlet-name>
        <url-pattern>/events/joined/filter</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ContentFilter</servlet-name>
        <url-pattern>/events/canceled/filter</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ContentFilter</servlet-name>
        <url-pattern>/events/passed/filter</url-pattern>
    </servlet-mapping>
    <!-- Authentication filter -->
    <filter>
        <filter-name>Encoding</filter-name>
        <filter-class>com.webapp.conferences.controllers.filters.EncodingFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>Encoding</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <filter>
        <filter-name>Auth Filter</filter-name>
        <filter-class>com.webapp.conferences.controllers.filters.AuthFilter</filter-class>
        <init-param>
            <param-name>excludedUrls</param-name>
            <param-value>/login,/signup,/css/style.css,/js/scripts.js</param-value>
        </init-param>
    </filter>
    <filter-mapping>
        <filter-name>Auth Filter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <filter>
        <filter-name>Access Filter</filter-name>
        <filter-class>com.webapp.conferences.controllers.filters.AccessFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>Access Filter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <jsp-config>
        <taglib>
            <taglib-uri>/WEB-INF/tld/confTagLib.tld</taglib-uri>
            <taglib-location>/WEB-INF/tld/confTagLib.tld</taglib-location>
        </taglib>
    </jsp-config>
    <!-- Credential for Data Base connection -->
    <resource-ref>
        <description>MySQL DB Connection</description>
        <res-ref-name>jdbc/mysql</res-ref-name>
        <res-type>javax.sql.DataSource</res-type>
        <res-auth>Container</res-auth>
    </resource-ref>

    <!-- Date Base name -->
    <context-param>
        <param-name>db_name</param-name>
        <param-value>mysql</param-value>
    </context-param>
</web-app>